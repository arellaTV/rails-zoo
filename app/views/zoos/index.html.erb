<h1>Zoo Directory</h1>
 
<div class="zoo-list">
  <% @zoos.each do |zoo| %>
    <div class="zoo-list__item">
      <h2><%= zoo.name %></h2>
      <p><%= zoo.description %></p>
      <p><%= link_to 'Show', zoo_path(zoo) %></p>
      <td><%= link_to 'Edit', edit_zoo_path(zoo) %></td>
    </div>
  <% end %>
</div>