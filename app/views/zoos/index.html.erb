
<div class="section">
  <h2>Zoo Directory</h2>
  <div class="divider"></div>
</div>

<div class="section">
  <ul class="zoo-list collection">
    <% @zoos.each do |zoo| %>
      <li class="zoo-list__item collection-item">
        <div>
          <b><%= link_to zoo.name, zoo_path(zoo) %></b>
        </div>
      </li>
    <% end %>
  </ul>
</div>