
<div class="col s12 m6">
  <div class="card">
    <div class="card-content">
      <span class="card-title"><%= animal.name %></span>
      <p><%= animal.description %></p>
    </div>
    <div class="card-action">
      <%= link_to 'Delete Animal', ['admin', animal.zoo, animal],
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "teal-text" %>
    </div>
  </div>
</div>
